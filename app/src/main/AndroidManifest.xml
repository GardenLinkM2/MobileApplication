<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gardenlink_mobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:theme="@style/GardenLink"
            android:label="@string/signUp_activity" />
        <activity android:name=".MyAccountActivity"/>
        <activity android:name=".HomeActivity"/>
        <activity android:name=".WalletActivity"/>
        <activity android:name=".MessagingActivity"/>
        <activity android:name=".MyLeasingActivity"/>
        <activity android:name=".MyLandsActivity"/>
        <activity android:name=".SignOutActivity"/>
        <activity android:name=".ConnexionActivity"/>
        <activity android:name=".ForgottenPasswordActivity"/>
    </application>

</manifest>