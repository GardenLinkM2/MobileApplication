<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGreen_topBar</item>
        <item name="colorPrimaryDark">@color/colorGreen_topBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorWhite</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="ThemeNavigationView">
        <item name="listPreferredItemPaddingLeft">50dp</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/colorBlue_accueil_postButton</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textColor">@color/colorGreen_topBar</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:backgroundTint">@color/colorRed</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.Colored">
    </style>


    <style name="GardenLink" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorGreen_topBar</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
    </style>

    <style name="BaseButton" parent="GardenLink">
        <item name="colorButtonNormal">@color/colorGreen_brighter</item>
        <item name="colorAccent">@color/colorGreen_disabledButton</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
    </style>


</resources>
