<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGreen_topBar</item>
        <item name="colorPrimaryDark">@color/colorGreen_topBar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeNavigationView">
        <item name="listPreferredItemPaddingLeft">50dp</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/colorBlue_accueil_postButton</item>
    </style>


    <style name="GardenLink" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorGreen_topBar</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>

    </style>

    <style name="BaseButton" parent="GardenLink">
        <item name="colorButtonNormal">@color/colorGreen_brighter</item>
        <item name="colorAccent">@color/colorGreen_disabledButton</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
    </style>


</resources>
